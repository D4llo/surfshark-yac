# Maintainer: Dallo <dallo@tutanota.com>

pkgname=surfshark-yac
pkgver=2.1.0.2503
pkgrel=1
pkgdesc="Yet another Surfshark VPN GUI Client for Arch Linux."
arch=('x86_64')
url="https://surfshark.com"
license=('custom:surfshark')
depends=('alsa-lib' 'at-spi2-core' 'gjs' 'nss' 'org.freedesktop.secrets' 'wireguard-tools')
options=('!strip' '!emptydirs')
install=${pkgname}.install
source=("https://ocean.surfshark.com/debian/pool/main/s/surfshark_2.1.0-2503_amd64.deb")
sha256sums=('6023498a242b417e523800e2314c40ff62abb8679193d7784eef93cd31b9edb3')

package(){

	# Extract package data
	tar -xJ -f data.tar.xz -C "${pkgdir}"

	install -D -m644 "${pkgdir}/opt/Surfshark/resources/dist/resources/surfsharkd.js.LICENSE.txt" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"

}
